script/source = "extends Control

onready var create_btn = $CenterContainer/VBoxContainer/CreateServer
onready var start_btn = $CenterContainer/VBoxContainer/StartGame
onready var close_btn = $CenterContainer/VBoxContainer/CloseServer
onready var quit_btn = $CenterContainer/VBoxContainer/Quit
onready var message_text = $MessageBox/MessageText

onready var gamemodes_dropdown = $Settings/VBoxContainer/HBoxContainer/GameModes

func _ready():
	Network.init_menu(self)
	
	message_text.text = \"Server:\"
	
	# init gamemodes
	var last_mode
	for gamemode in Gamemodes.MODES:
		gamemodes_dropdown.add_item(str(gamemode))
	
	gamemodes_dropdown.select(1)
	Network.SETTINGS[\"GAMEMODE\"] = 1
	
	#print(Gamemodes.MODES[last_mode])

func reset():
	create_btn.disabled = false
	start_btn.disabled = true
	close_btn.disabled = true

func message(msg):
	message_text.text += \"\\n\"+str(msg)

func server_closed():
	message(\"Server closed!\")
	reset()

func server_created():
	create_btn.disabled = true
	start_btn.disabled = false
	close_btn.disabled = false

func _on_CreateServer_pressed():
	Network.create_server()

func _on_StartGame_pressed():
	Network.start_game()

func _on_CloseServer_pressed():
	create_btn.disabled = true
	start_btn.disabled = true
	close_btn.disabled = true
	Network.close_server()

func _on_Quit_pressed():
	create_btn.disabled = true
	start_btn.disabled = true
	close_btn.disabled = true
	quit_btn.disabled = true
	Network.quit()

# - Settings ->
func _on_GameModes_item_selected(id):
	Network.SETTINGS[\"GAMEMODE\"] = id
# <- Setrtings -
"

